<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:background="@drawable/edit_text_bg"
    android:layout_height="wrap_content">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:padding="10dp"
        android:hint="Enter Student Name"
        android:textSize="19sp"
        android:textColor="@android:color/black"
        android:id="@+id/diolouge_StudentNameEdittextid"
        />

    <EditText
        android:layout_below="@+id/diolouge_StudentNameEdittextid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:padding="10dp"
        android:hint="Enter Student Roll"
        android:textSize="19sp"
        android:textColor="@android:color/black"
        android:id="@+id/diolouge_StudentRollEdittextid"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/diolouge_StudentRollEdittextid"

        android:layout_marginTop="10dp"
        android:background="@drawable/buttonbackground"
        android:textColor="#fff"
        android:text="Save"
        android:textSize="19sp"
        android:textAllCaps="false"
        android:id="@+id/diolouge_SaveButtonid"
        />








</RelativeLayout>