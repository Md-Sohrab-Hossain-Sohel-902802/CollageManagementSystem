<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.ProfileFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="170dp"
        android:layout_height="170dp"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/profile"
        android:id="@+id/profile_userProfileCircleImageviewid"
        />

    <Button
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonbackground"
        android:textAllCaps="false"
        android:text="Upload"
        android:textSize="18sp"
        android:textColor="#fff"
        android:padding="5dp"
        android:id="@+id/profile_ProfileImageUploadButtonid"
        android:layout_below="@+id/profile_userProfileCircleImageviewid"
        android:layout_centerHorizontal="true"

        android:visibility="gone"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_ProfileImageUploadButtonid"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Md Sohrab Hossain Sohel"

        android:layout_centerHorizontal="true"
        android:id="@+id/profile_UserNameTextviewid"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        />


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_UserNameTextviewid"
        android:textSize="16sp"
        android:text="sohelranask6869@gmail.com"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:id="@+id/profile_userEmailTextviewid"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_userEmailTextviewid"
        android:textSize="18sp"
        android:text="01740244739"

        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/profile_UserPoneTextviewid"
        android:textColor="#000000"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_UserPoneTextviewid"
        android:textSize="18sp"
        android:text="Gender: Male"

        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/profile_GenderTextviewid"
        android:textColor="#000000"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_GenderTextviewid"
        android:textSize="18sp"
        android:text="Teacher of : Rangpur Polytechnic Institute"

        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/profile_teacherOfTextviewid"
        android:textColor="#000000"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_teacherOfTextviewid"
        android:textSize="18sp"
        android:text="Works At: Rangpur Polytechnic Institute"

        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/profile_WorksAtTextviewid"
        android:textColor="#000000"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_WorksAtTextviewid"
        android:textSize="18sp"
        android:text="Relationship: Single"

        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/profile_RelationShipTextviewid"
        android:textColor="#000000"
        android:layout_marginBottom="50dp"
        />








    </RelativeLayout>


</ScrollView>